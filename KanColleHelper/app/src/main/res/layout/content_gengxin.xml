<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.kochiyasanae.kancollehelper.GengxinActivity"
    tools:showIn="@layout/activity_gengxin"
>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >


            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/card_margin_left"
                android:layout_marginStart="@dimen/card_margin_left"
                android:layout_marginRight="@dimen/card_margin_right"
                android:layout_marginEnd="@dimen/card_margin_right"
                android:layout_marginTop="@dimen/card_view_margin"

                card_view:cardCornerRadius="4dp"
                card_view:cardElevation="2dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                card_view:cardBackgroundColor="@color/white">
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">




                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/layout_margin_top"
                        android:layout_marginLeft="@dimen/layout_margin_left"
                        android:layout_marginStart="@dimen/layout_margin_left"
                        android:layout_marginBottom="@dimen/layout_margin_bottom"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/little_text_size"
                            android:ellipsize="end"
                            android:layout_marginTop="@dimen/textview_margin_top2"
                            android:text="软件名称"
                            android:textAppearance="@style/TextAppearance.AppCompat.Caption"/>

                        <TextView
                            android:id="@+id/zhuangbeimingcheng"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/text_view_margin_left"
                            android:layout_marginStart="@dimen/text_view_margin_left"
                            android:textSize="@dimen/big_text_size"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="舰娘助手(KanColleHelper)"
                            android:layout_marginTop="@dimen/textview_margin_top2"
                            android:textAppearance="@style/TextAppearance.AppCompat.Title"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/little_text_size"
                            android:ellipsize="end"
                            android:layout_marginTop="@dimen/textview_margin_top2"
                            android:text="当前版本"
                            android:textAppearance="@style/TextAppearance.AppCompat.Caption"/>

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/middle_text_size"
                            android:ellipsize="end"
                            android:layout_marginLeft="@dimen/text_view_margin_left"
                            android:layout_marginStart="@dimen/text_view_margin_left"
                            android:text="2016/4/17  Ver.0.15 Release"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>




                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/caidaitubiao"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/imageview_margin_right"
                            android:layout_marginEnd="@dimen/imageview_margin_right"
                            android:contentDescription="@string/imageview_content_description_xiaocaidai" />

                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>




            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/card_margin_left"
                android:layout_marginStart="@dimen/card_margin_left"
                android:layout_marginRight="@dimen/card_margin_right"
                android:layout_marginEnd="@dimen/card_margin_right"
                android:layout_marginTop="@dimen/card_view_margin"

                card_view:cardCornerRadius="4dp"
                card_view:cardElevation="2dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                card_view:cardBackgroundColor="@color/white">
                >




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/layout_margin_top"
                    android:layout_marginLeft="@dimen/layout_margin_left"
                    android:layout_marginStart="@dimen/layout_margin_left"
                    android:layout_marginBottom="@dimen/layout_margin_bottom">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/little_text_size"
                        android:ellipsize="end"
                        android:text="软件说明"
                        android:layout_marginTop="@dimen/textview_margin_top2"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/text_view_margin_left"
                        android:layout_marginStart="@dimen/text_view_margin_left"
                        android:textSize="@dimen/middle_text_size"
                        android:ellipsize="end"
                        android:text="本程序是一款舰Colle的装备改修、远征数据查询APP，适配安卓4.03至6.0版本。"
                        android:layout_marginTop="@dimen/textview_margin_top2"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>





                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/little_text_size"
                        android:ellipsize="end"
                        android:text="目前进度"
                        android:layout_marginTop="@dimen/textview_margin_top2"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/xingse_text_size"
                        android:ellipsize="end"
                        android:layout_marginTop="@dimen/textview_margin_top2"
                        android:layout_marginLeft="@dimen/text_view_margin_left"
                        android:layout_marginStart="@dimen/text_view_margin_left"
                        android:textColor="@color/xingse"
                        android:text="已完成"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/text_view_margin_left"
                            android:layout_marginStart="@dimen/text_view_margin_left"
                            android:textSize="@dimen/middle_text_size"
                            android:ellipsize="end"
                            android:text="明石的改修日常、皋月的远征日记"
                            android:layout_marginTop="@dimen/textview_margin_top2"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>




                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/xingse_text_size"
                        android:ellipsize="end"
                        android:layout_marginTop="@dimen/textview_margin_top2"
                        android:layout_marginLeft="@dimen/text_view_margin_left"
                        android:layout_marginStart="@dimen/text_view_margin_left"
                        android:textColor="@color/xingse"
                        android:text="开发中"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/text_view_margin_left"
                        android:layout_marginStart="@dimen/text_view_margin_left"
                        android:textSize="@dimen/middle_text_size"
                        android:ellipsize="end"
                        android:text="大淀的任务记录"
                        android:layout_marginTop="@dimen/textview_margin_top2"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/card_margin_left"
                android:layout_marginStart="@dimen/card_margin_left"
                android:layout_marginRight="@dimen/card_margin_right"
                android:layout_marginEnd="@dimen/card_margin_right"
                android:layout_marginTop="@dimen/card_view_margin"

                card_view:cardCornerRadius="4dp"
                card_view:cardElevation="2dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                card_view:cardBackgroundColor="@color/white">
                >




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/layout_margin_top"
                    android:layout_marginLeft="@dimen/layout_margin_left"
                    android:layout_marginStart="@dimen/layout_margin_left"
                    android:layout_marginBottom="@dimen/layout_margin_bottom">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/little_text_size"
                        android:ellipsize="end"
                        android:layout_marginTop="@dimen/textview_margin_top2"
                        android:text="新版发布"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption"/>

                    <TextView
                        android:id="@+id/gaixiuzhushou"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/text_view_margin_left"
                        android:layout_marginStart="@dimen/text_view_margin_left"
                        android:textSize="@dimen/middle_text_size"
                        android:ellipsize="end"
                        android:text="预定在舰Colle新增改修项目一周后更新。"
                        android:layout_marginTop="@dimen/textview_margin_top2"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/little_text_size"
                        android:ellipsize="end"
                        android:layout_marginTop="@dimen/textview_margin_top2"
                        android:text="获取更新"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/xingse_text_size"
                        android:ellipsize="end"
                        android:layout_marginTop="@dimen/textview_margin_top2"
                        android:layout_marginLeft="@dimen/text_view_margin_left"
                        android:layout_marginStart="@dimen/text_view_margin_left"
                        android:textColor="@color/xingse"
                        android:text="自动更新"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/text_view_margin_left"
                        android:layout_marginStart="@dimen/text_view_margin_left"
                        android:textSize="@dimen/middle_text_size"
                        android:ellipsize="end"
                        android:text="本APP已上传腾讯、百度、360、华为、小米、豌豆荚等软件商店，自以上途径下载即可实现自动更新。"
                        android:layout_marginTop="@dimen/textview_margin_top2"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/xingse_text_size"
                        android:ellipsize="end"
                        android:layout_marginTop="@dimen/textview_margin_top2"
                        android:layout_marginLeft="@dimen/text_view_margin_left"
                        android:layout_marginStart="@dimen/text_view_margin_left"
                        android:textColor="@color/xingse"
                        android:text="手动更新"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption"/>



                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/text_view_margin_left"
                        android:layout_marginStart="@dimen/text_view_margin_left"
                        android:textSize="@dimen/middle_text_size"
                        android:ellipsize="end"
                        android:autoLink="web"
                        android:text="百度网盘：http://pan.baidu.com/s/1dDNTHxJ"
                        android:layout_marginTop="@dimen/textview_margin_top2"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>




                </LinearLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/card_margin_left"
                android:layout_marginStart="@dimen/card_margin_left"
                android:layout_marginRight="@dimen/card_margin_right"
                android:layout_marginEnd="@dimen/card_margin_right"
                android:layout_marginTop="@dimen/card_view_margin"

                card_view:cardCornerRadius="4dp"
                card_view:cardElevation="2dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                card_view:cardBackgroundColor="@color/white">
                >




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/layout_margin_top"
                    android:layout_marginLeft="@dimen/layout_margin_left"
                    android:layout_marginStart="@dimen/layout_margin_left"
                    android:layout_marginBottom="@dimen/layout_margin_bottom">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/little_text_size"
                        android:ellipsize="end"
                        android:layout_marginTop="@dimen/textview_margin_top2"
                        android:text="联系作者"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption"/>

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/text_view_margin_left"
                        android:layout_marginStart="@dimen/text_view_margin_left"
                        android:textSize="@dimen/middle_text_size"
                        android:ellipsize="end"
                        android:autoLink="email"
                        android:text="电子邮件：KochiyaSanae@outlook.com"
                        android:layout_marginTop="@dimen/textview_margin_top2"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/little_text_size"
                        android:ellipsize="end"
                        android:text="免责声明"
                        android:layout_marginTop="@dimen/textview_margin_top2"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/text_view_margin_left"
                        android:layout_marginStart="@dimen/text_view_margin_left"
                        android:textSize="@dimen/middle_text_size"
                        android:text="本app内容均收录自互联网公开资料，如有侵权请联系作者删除。"
                        android:layout_marginTop="@dimen/textview_margin_top2"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>






                </LinearLayout>
            </android.support.v7.widget.CardView>


        </LinearLayout>


    </ScrollView>
</RelativeLayout>
